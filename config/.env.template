# 環境変数テンプレート
# このファイルを .env にコピーして、実際の値を設定してください

# === サーバー設定 ===
# Node.js サーバーのポート番号
PORT=3000

# Python APIサーバーのポート番号
PYTHON_API_PORT=8000

# === データベース設定 ===
# データベース接続URL（本番環境用）
DATABASE_URL=postgresql://user:password@localhost:5432/agentdev

# Redis接続URL（キャッシュ用）
REDIS_URL=redis://localhost:6379

# === セキュリティ設定 ===
# JWT秘密鍵
JWT_SECRET=your-super-secret-jwt-key-here

# API キー
API_KEY=your-api-key-here

# セッション秘密鍵
SESSION_SECRET=your-session-secret-here

# === 外部サービス設定 ===
# OpenAI API キー
OPENAI_API_KEY=sk-your-openai-api-key

# GitHub API トークン
GITHUB_TOKEN=ghp_your-github-token

# === ログ設定 ===
# ログレベル (error, warn, info, debug)
LOG_LEVEL=info

# ログ出力先
LOG_FILE=logs/app.log

# === 開発設定 ===
# 開発モード (development, production, test)
NODE_ENV=development

# デバッグモード
DEBUG=true

# ホットリロード有効化
HOT_RELOAD=true

# === ファイル設定 ===
# アップロードディレクトリ
UPLOAD_DIR=uploads

# 一時ファイルディレクトリ
TEMP_DIR=tmp

# 最大ファイルサイズ (MB)
MAX_FILE_SIZE=10

# === メール設定 ===
# SMTPサーバー設定
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# 送信者メールアドレス
FROM_EMAIL=noreply@yourapp.com

# === 監視・分析設定 ===
# Google Analytics ID
GA_TRACKING_ID=GA-XXXXXXXXX

# Sentry DSN (エラー追跡)
SENTRY_DSN=https://your-sentry-dsn

# === キャッシュ設定 ===
# キャッシュ有効期限 (秒)
CACHE_TTL=3600

# === レート制限設定 ===
# API レート制限 (requests per minute)
RATE_LIMIT=100

# === バックアップ設定 ===
# バックアップ保存先
BACKUP_DIR=backups

# バックアップ保持期間 (日)
BACKUP_RETENTION_DAYS=30

# === 通知設定 ===
# Slack Webhook URL
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Discord Webhook URL
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK